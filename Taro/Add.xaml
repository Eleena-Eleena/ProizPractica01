<Window x:Class="Taro.Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Taro"
        mc:Ignorable="d"
        Title="Add" Height="450" Width="800">
    <Grid>
        <Image Grid.Column="1" Margin="10"
               x:Name="imageAva"/>

        <Button Content="Добавить" Click="Button_Click"/>
        <TextBlock x:Name="imagePath" Visibility="Hidden" Text="" Grid.Row="0" Grid.Column="0"/>

    </Grid>
</Window>
