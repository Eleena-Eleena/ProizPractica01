<Page x:Class="Taro.Pages.Tests"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Taro.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Tests">

    <Grid x:Name="GridName">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <RadioButton Content="Общие данные" Style="{StaticResource MenuButton}"/>
            <RadioButton Content="Старшие арканы" Style="{StaticResource MenuButton}"/>
            <RadioButton Content="Младшие арканы" Style="{StaticResource MenuButton}"/>
        </StackPanel>
        <Grid Grid.Row="1" Background="#f9e6b4">
            
        </Grid>
    </Grid>
</Page>
